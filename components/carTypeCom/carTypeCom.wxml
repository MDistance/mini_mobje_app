<!--components/carTypeCom/carTypeCom.wxml-->
 <!-- 车型 -->
      <view class="car_type">
        <scroll-view scroll-y="true" style="height: 300rpx;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
          <view id="demo1" class="scroll-view-item scrollItem">
            <view  class="carTypeItem">
              <image class="carImg"></image>
              <view class="carTextDesc">
                <text class="carName">大众速腾（豪华版）</text>
                <text class="carDesc">自动1.6L/三厢四座</text>
              </view>
              <view class="avgDayItem">
                <image class="imgSize" style="width:35rpx;height:35rpx" src="/assets/qian.svg"></image>
                <text class="avgDayPrice">106</text>
                <text class="avgDayPriceText">日均价</text>
              </view>
              <van-radio-group value="{{ radio }}" bind:change="onChange">
                  <van-radio name="1" icon-size="10px"></van-radio>
                </van-radio-group>
            </view>
          </view>
          <view id="demo2"  class="scroll-view-item scrollItem">
