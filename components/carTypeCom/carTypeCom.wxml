        </scroll-view>
      </view>
      <!-- 租赁方式代码 -->
      <view class="rental">
        <view class="itemBackColor">
          <view class="page-section-title">
           <text>租赁方式选择</text>
          </view>
          <view class="page-section-spacing">
            <scroll-view scroll-y="true" style="height: 300rpx;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
              <view  class="scroll-view-item demo-text-1">
                <view class="page-section-spacingItemOne">
                  <text class="rentalText">普通日租方式</text>
                  <view class="rentalDays">
                    <van-stepper value="{{ value }}"  style=" margin-right: 10rpx;" bind:change="onChange" input-width="10px" button-size="10px" integer  step="1"/>
                    <van-radio-group value="{{ radio }}" bind:change="onChangeRadio">
                       <van-radio name="12" icon-size="10px"></van-radio>
                    </van-radio-group>
                  </view>
                 
                </view>
              </view>
              <view id="demo1" class="scroll-view-item demo-text-1">
                <view class="page-section-spacingItem">
                  <text class="rentalText">3日套餐 , 88元</text>
                  <view class="rentalDays">
                  <van-stepper style=" margin-right: 10rpx;" value="{{ value }}" bind:change="onChange" input-width="10px" button-size="10px" integer  step="1"/>
                    <van-radio-group value="{{ radio }}" bind:change="onChangeRadio">
                       <van-radio name="3" icon-size="10px"></van-radio>
                    </van-radio-group>
                  </view>
                </view>
              </view>
              <view id="demo2"  class="scroll-view-item demo-text-2">
                <view class="page-section-spacingItem">
                  <text class="rentalText">7日套餐 , 8120元</text>
                  <view class="rentalDays">
                    <van-stepper style=" margin-right: 10rpx;" value="{{ value }}" bind:change="onChange" input-width="10px" button-size="10px" integer  step="1"/>
                    <van-radio-group value="{{ radio }}" bind:change="onChangeRadio">
                       <van-radio name="4" icon-size="10px"></van-radio>
                    </van-radio-group>
                  </view>
                </view>
              </view>
              <view id="demo3" class="scroll-view-item demo-text-3">
                <view class="page-section-spacingItem">
                  <text class="rentalText">15日套餐 , 200元</text>
                  <view class="rentalDays">
                    <van-stepper style=" margin-right: 10rpx;" value="{{ value }}" bind:change="onChange" input-width="10px" button-size="10px" integer  step="1"/>
                    <van-radio-group value="{{ radio }}" bind:change="onChangeRadio">
                       <van-radio name="5" icon-size="10px"></van-radio>
                    </van-radio-group>
                  </view>
                </view>
              </view>
            </scroll-view>
          </view>
        </view>
      </view>
      <!-- 归还日期代码 -->
      <view class="backDate">
        <view class="backDateItem">
          <text class="backDateText"> 总天数10.5{{}}天</text>
        </view>

        <view class="backDatePrice">
          <text class="backDateText">车辆租赁金额</text>
          <text class="backDateTextPrice"> 888元</text>
        </view>
      </view>
      <view class="confirmBtn">
          <button class="btn" bindtap="confirmBtn">确认</button>
      </view>
