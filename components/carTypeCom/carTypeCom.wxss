/* components/carTypeCom/carTypeCom.wxss */
/* 车型 */
.car_type{
  padding: 20rpx;
  background-color: rgb(214, 212, 212);
}
.carTypeItem{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  justify-content: space-between;
  background-color: #fff;
}
.avgDayItem{
  display: flex;
  align-self:flex-end;
  font-size: 20rpx;
  color: red;
}
.imgSize{
  display: inline-block;
}
.carImg{
  width: 60rpx;
  height:100rpx;
  background-color: yellowgreen;
}
.carName{
  color: rgb(41, 146, 111);
}
.carDesc{
  font-size: 20rpx;
  color: #bebaba;
}
.scrollItem{
  margin-bottom: 20rpx;
}
.carTextDesc{
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.avgDayPriceText{
  color: #b4b4b4;
  font-size: 18rpx;
}
.avgDayPrice{
  color: bisque;
}
/* 租赁方式选择 */
.rental{
  background-color: rgb(248, 214, 220);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
}
.rentalDays{
  padding: 10rpx 0;
  display: flex;
  align-items: center;
}
.backDateTextPrice{
  font-size: 28rpx;
  color: red;
}
/* 背景白色代码 */
.itemBackColor{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
}
/* 普通日租方式 */
.page-section-spacingItemOne{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #e8e8e8;

}
.van-stepper{
  margin-right: 10rpx;
}
.car_type,.rental,.backDate{
  margin-bottom: 20rpx;
}

.page-section-title{
  margin-bottom: 20rpx;
   text-align: center;
}
.page-section-spacingItem{
  display: flex;
  height: 50rpx;
  margin-top: 20rpx;
  justify-content: space-between;
}
.line{
  width: 60rpx;
  height: 10rpx;
}
/* 归还日期代码 */
.backDate{
  background-color: rgb(245, 206, 212);
  display: flex;
  font-size: 22rpx;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;

}
.backDateItem{
  height: 80rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

/* 确认按钮 */
.btn{
  width: 100%;
  background-color: #ff7f00;
  color: white;
}