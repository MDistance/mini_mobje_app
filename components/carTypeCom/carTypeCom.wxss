/* components/carTypeCom/carTypeCom.wxss */
/* 车型 */
.car_type{
  padding: 20rpx;
  background-color: rgb(214, 212, 212);
}
.carTypeItem{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  justify-content: space-between;
  background-color: #fff;
}
.carImg{
  width: 60rpx;
  height:100rpx;
  background-color: yellowgreen;
}
.carName{
  color: rgb(41, 146, 111);
}
.carDesc{
  font-size: 20rpx;
  color: #bebaba;
}
.scrollItem{
  margin-bottom: 20rpx;
}
.carTextDesc{
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.avgDayPriceText{
  color: #e8e8e8;
  font-size: 18rpx;
}
.avgDayPrice{
  color: bisque;
}
/* 租赁方式选择 */
.rental{
  background-color: rgb(248, 214, 220);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
}
.rentalDays{
  height: 30rpx;
  display: flex;
  align-items: center;
}
/* 背景白色代码 */
.itemBackColor{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
}
/* 普通日租方式 */
.page-section-spacingItemOne{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  border-bottom: 1rpx solid #e8e8e8;

}
.car_type,.rental,.backDate{
  margin-bottom: 20rpx;
}

.page-section-title{
  margin-bottom: 20rpx;
   text-align: center;
}
.page-section-spacingItem{
  display: flex;
  height: 50rpx;
  margin-top: 20rpx;
  justify-content: space-between;
}
.line{
  width: 60rpx;
  height: 10rpx;
}
/* 归还日期代码 */
.backDate{
  background-color: rgb(245, 206, 212);
  display: flex;
  font-size: 22rpx;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;

}
.backDateItem{
  height: 80rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}