<!-- 预约信息 -->
<view class="add-page">
  <form bindsubmit="submitForm">
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{TopTips}}</view>
      <view>
        <view class="mod t-name">
          <text class="key">发票类型</text>
          <radio-group class="radio-group" bindchange="radioChange">
            <label class="radio" wx:for="{{invoiceItems}}">
              <radio class="radio" value="{{item.value}}" checked="{{item.checked}}" disabled="{{item.disabled}}" />{{item.name}}
            </label>
          </radio-group>
        </view> 
      </view>

      <!-- 个人发票 -->
      <view wx:if="{{personalHide}}">
        <van-cell-group>
            <van-field
              value="{{ invoiceName }}"
              clearable
              name="invoiceName"
              label="姓名"
              placeholder="请输入姓名"
              bind:click-icon="onClickIcon"
            />
            <van-field
              value="{{ invoiceTel }}"
              clearable
              name="invoiceTel"
              label="手机号"
              type="number"
              placeholder="请输入手机号"
              bind:click-icon="onClickIcon"
            />
            <van-field
              value="{{ invoiceEmail }}"
              clearable
              name="invoiceEmail"
              label="电子邮箱"
              placeholder="请输入电子邮箱"
              bind:click-icon="onClickIcon"
            />
          </van-cell-group>
      </view>

      <!-- 企业发票 -->

      <view wx:if="{{enterpriseHide}}">
        <van-cell-group>
            <van-field
              value="{{ invoiceEnterprise }}"
              clearable
              name="invoiceEnterprise"
              label="企业名称"
              placeholder="请输入企业名称"
              bind:click-icon="onClickIcon"
            />
            <van-field
              value="{{ invoiceTel }}"
              clearable
              type="number"
              name="invoiceTel"
              label="手机号"
              placeholder="请输入手机号"
              bind:click-icon="onClickIcon"
            />
            <van-field
              value="{{ invoiceAccount }}"
              clearable
              name="invoiceAccount"
              label="账号"
              placeholder="请输入账号"
              bind:click-icon="onClickIcon"
            />
         
            <van-field
              value="{{ invoiceBankName }}"
              name="invoiceBankName"
              type="number"
              label="开户行"
              placeholder="请输入开户行"
       
            />
            <van-field
              value="{{ invoiceAddress }}"
              label="地址"
              name="invoiceAddress"
              placeholder="请输入地址"
          
            />
            <van-field
              value="{{ invoiceEnterpriseNo }}"
              clearable
              type="number"
              name="invoiceEnterpriseNo"
              label="税号"
              placeholder="如企业开票，请提供相应税号"
            />
            <van-field
              value="{{ invoiceEmail }}"
              name="invoiceEmail"
              label="电子邮箱"
              placeholder="电子发票接收邮箱"
            />
 
          </van-cell-group>
      </view>

      <view class="submit-btn">
        <button class='button' loading="{{isLoading}}" hover-start-time="200" disabled="{{isdisabled}}" formType="submit">立即开票</button>
      <!-- <text>备注：长春地区拼车立减20元</text> -->

    </view>
  </form>
</view>