Page {
  width: 100%;
  height: 100%;
  background: #f2f2f2;
  display: flex;
  flex-direction: column;
}
 /* 头部代码 */
.loginHeader {
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #2ab6b7;
  background:-webkit-linear-gradient(top,#2ab6b7 ,#7bdbdb);
  height:300rpx;
}
.nav .settingItem .icon{
  width: 40rpx;
  height: 25rpx;
  margin-right: 20rpx;
}
 
.userHead {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin: 0px auto;
}
 
.userTitle {
  margin-left: 16rpx;
  font-size: 30rpx;
  color: #ffffff;
}
.nav{
  padding: 20rpx;
  margin-top:30rpx;
}
.main{
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.content{
  display: flex;
  justify-content: space-around;
  border-radius: 5rpx;
  width: 100%;
  height: 120rpx;
  background-color: white;
  margin-bottom: 10rpx;
}
.img{
  width: 50rpx;
  height: 50rpx;
}
.conItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 20rpx;
}
 .list{
   box-sizing: border-box;
  padding: 10rpx;
   display: flex;
   flex-direction: column;
   width: 100%;
   background-color: white;
   height:400rpx;
 }
 .listItem{
   display: flex;
   justify-content: space-between;
   width: 100%;
   height: 50rpx;
   line-height: 50rpx;
   margin-bottom: 10rpx;
   background-color: #dedede;
 }
 .listItemTitle{
  height: 50rpx;
  line-height: 50rpx;
 }
.order {
  width: 100%;
  height: max-content;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  padding: 32rpx 0;
  margin: 20rpx 0;
  background: white;
}
 
.order .item {
  display: flex;
  flex-direction: row;
  flex: 1;
  justify-content: center;
  align-items: center;
}
 
 
 
.order .item .icon {
  width: 40rpx;
}
 
.order .item .text {
  margin-left: 16rpx;
  font-size: 30rpx;
  color: #333;
}
 
.settingItem {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  flex-direction: row;
  background: white;
  border-bottom: #dedede solid 1px;
  padding: 22rpx 30rpx;
  align-items: center;
}
 
.settingItem .caption, .settingItem .value {
  font-size: 30rpx;
  color: #333;
}
 
.settingItem .value {
  flex: 1;
  text-align: right;
}
 
.settingItem .icon {
  width: 28rpx;
  margin-left: 10rpx;
}

/* 底部代码 */
.footer{
  position: fixed;
  bottom: 0;
  height: 180rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  /* background-color: seashell; */

}

.cancelBtn{
   width: 50%;
   height: 60rpx;
   line-height: 60rpx;
   color: orange;
   border-radius: 30rpx;
   border: 1px solid salmon;
   text-align: center;
}
.cancelBtn>text{
  width: 100%;
  height: 100%;
  text-align: center;
}