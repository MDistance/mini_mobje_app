<!--pages/my/my.wxml-->
<import src='template.wxml' />
<view>
      <view class='loginHeader'>
            <view class="headerLeft">
              <image src='{{userHead}}' bindtap='loginTap' class='userHead' mode='aspectFill' />
            </view>
            <view wx:if="{{!isLoginSuccess}}" class="headerRight">
              <text class='userTitle' bindtap='loginTap'>{{userTitle}}</text>
            </view>
            <view wx:else="{{isLoginSuccess}}" class="headerRight">
              <text class='userTel'>{{userTel}}</text>
              <text class='userRen'>{{userRen}}</text>
            </view>
      </view>
      <view class="main">
        <view class="content">
          <view class="conItem" bindtap="invoiceManage">
             <image class="img" src="/assets/fapiaoguanli1.png"></image>
             <text>发票管理</text>
          </view>
          <view class="conItem" bindtap="delrBtn">
             <image class="img" src="/assets/weizhangjilu.png"></image>
             <text>违章记录</text>
          </view>
        </view>
        <view class="list">
           <view class="listItem">
              <text class="listItemTitle">预约订单</text>
              <text class="listItemCon"></text>
           </view>
           <view class="listItem">
              <text class="listItemTitle">联系方式 :1800666666</text>
              <text class="listItemCon"></text>
           </view>
        </view>
      </view>
    <view class="footer">
      <view class="cancelBtn">
        <text bindtap="btn">退出登录</text>
      </view>
      <view class="service">
        <text class="serviceTel">客服电话 :</text>
        <text class="tel">17513145210</text>    
      </view>
    </view>

</view>