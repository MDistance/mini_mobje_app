/* pages/desposit/desposit.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.container{
  width: 100%;
  height: 100%;
}
.header{
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:40rpx;
  color: red;
  font-weight: bolder;
}
.content{
   width: 100%;
   height: 100%;
   padding: 10rpx 30rpx;
   box-sizing: border-box;
   font-size: 28rpx;
}
.item{
  width: 100%;
  height:60rpx;
}
.footer{
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 80rpx;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: center;
}
.payMoney{
  border-radius: 10rpx;
  width: 90%;
  height:100rpx;
  line-height: 100rpx;
  background-color: rgb(255, 124, 47);
  color: white;
  text-align: center;
  font-size: 40rpx;
}