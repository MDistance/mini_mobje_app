/* pages/orderDetail/orderDetail.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: rgb(225, 230, 235);
}
.container{
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}
/* 头部区域代码 */
.header{
  position: absolute;
  top: 0;
  background-color: #fff;
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  flex-direction: column;
  box-shadow:3rpx 3rpx 10rpx rgb(223, 223, 223);
}
.headerTitle{
  font-size: 24rpx;
}
.countDown,.itemMon{
  color: #ff7f00;
}
.order{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.item{
  display: flex;
  justify-content: space-between;
}
.itemDesc{
  font-size: 14px;
  color: rgb(202, 204, 206);
}
.itemCon{
  font-size: 14px;
}

/* 中间内容区域代码 */
.main{
  position: absolute;
  top: 200rpx;
  height: calc(80%- 220rpx);
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.carDetail,.orderDetail{
  width: 100%;
  height: 48%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #fff;
  
}
.carName{
  color: aquamarine;
}
.carDetail_header{
  display: flex;
  width: 100%;
  height:100rpx;
}
.orderDetail_title{
  height:80rpx;
  line-height:80rpx ;
}
.carDetail_header_left{
  margin-right: 20rpx;
}
.carDetail_header_right{
  display: flex;
  flex-direction: column;
}
.carDetail_content{
  height: calc(100%-100rpx);
}
.carDetail_content,.orderDetail_content1,.orderDetail_content2{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 22rpx;
}
.orderDetail_content1{
  width: 100%;
  height:70%;
  border-bottom: silver 1px solid;
}
.orderDetail_content2{
  width: 100%;
  height:30%;
}
/* 订单明细价钱 */
.price{
  font-size: 24rpx;
color: orange;
}
.flexItem{
  display: flex;
  justify-content: space-between;
}

.footer{
  position: absolute;
  bottom: 140rpx;
  width: 100%;
  height:10%;
  line-height: 10%;
  background-color: #fff;
  align-items: center;
  display: flex;
  color: #ff7f00;
  justify-content: space-around;
}
.changeBtn,.cancelBtn{
  text-align: center;
  width: 45%;
  height:70rpx;
  line-height: 70rpx;
  border: #ff7f00 1px solid;
  border-radius: 4rpx;
}
.footer,.orderDetail,.carDetail{
  box-shadow:4rpx 4rpx 10rpx  rgb(202, 204, 206);
}
