/* pages/orderDetail/orderDetail.wxss */
page{
  width: 100%;
  height: 100%;
  background-color:#fff;
}
.container{
  width: 100%;
  height: 90%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: rgb(240, 240, 240);
 
}
/* 头部区域代码 */
.header{
  background-color: #fff;
  width: 100%;
  height:15%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  flex-direction: column;
  box-shadow:3rpx 3rpx 10rpx rgb(223, 223, 223);
}
.headerTitle{
  font-size: 24rpx;
}
.countDown,.itemMon{
  color: #ff7f00;
}
.order{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.item{
  margin-bottom:20rpx;
  display: flex;
  justify-content: space-between;
}
.itemDesc{
  font-size: 14px;
  color: rgb(202, 204, 206);
}
.itemCon{
  font-size: 14px;
}

.header,.main{
  margin-bottom:30rpx;
}
/* 中间内容区域代码 */
.main{

  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.carDetail,.orderDetail{
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #fff;
  
}
.carName{
  color: rgb(66, 172, 136);
}
.carDetail_header{
  display: flex;
  margin-bottom: 20rpx;
}
.carDetail_header_left{
  margin-right: 20rpx;
}
.carDetail_header_right{
  display: flex;
  flex-direction: column;
}
.carDetail_content,.orderDetail_content1,.orderDetail_content2{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 22rpx;
  margin-bottom:20rpx;
}
.orderDetail_content1{
  border-bottom: silver 1px solid;
}
/* 订单明细价钱 */
.price{
  font-size: 24rpx;
color: orange;
}
.orderDetail_title{
  margin-bottom:30rpx;
}
.flexItem{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.footer{
  background-color: #fff;
  width: 100%;
  height:150rpx;
}
.footerCon{
  width: 100%;
  height:150rpx;
  align-items: center;
  display: flex;
  color: #ff7f00;
  justify-content: space-around;
  padding: 20rpx;
  box-sizing: border-box;
}
.changeBtn,.cancelBtn{
  text-align: center;
  width: 45%;
  height:70rpx;
  line-height: 70rpx;
  border: #ff7f00 1px solid;
  border-radius: 4rpx;
}
.orderDetail,.carDetail{
  box-shadow:4rpx 4rpx 10rpx  rgb(202, 204, 206);
}
