/**index.wxss**/
Page {
  width: 100%;
  height: 100%;
  background-color: #F8F8F8;
}
 /* 头部轮播部分 */
.homeHeader {
  width: 100%;
  height: 380rpx;
}
.homeHeader .swiper {
  width: 100%;
  height: 100%;
}
/* 中间内容 */
.container{
 padding: 20rpx;
 height:80%;
}
.content{
  width: 100%;
  height:100%;
  position: relative;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.content .car{
  position: absolute;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-radius:15rpx;
  top: -30rpx;
  font-size: 14px;
  box-sizing: border-box;
  height: 80%;
  width: 100%;
  padding: 0 30rpx;

}
/* 选择城市 */
.carCity{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
/* 基础价格 弹窗 */
.van-dialog{
  height: 800rpx;
}
.cont{
  padding: 20rpx;
}
.pickup_outlets{
  opacity: 1;
  z-index: 9999;
  background: #fff;
  width: 99%;
  height:70%;
}
/* 车型弹框 */

/* 取车还地点代码 */
.carCityItem{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: #dedede 1px solid;
}
.picker{
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
}
.section{
  padding: 14rpx 0;
  display: flex;
  width:24%;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
}
.section__title{
  color: #979797;
  font-size: 12px;
}
.backService{
  font-size: 20rpx;
  color: red;
}
/* 选择车型,选择日期,选择车型,送车上门 */
.carCityItem,.dateTime,.carType,.home_delivery{
  border-bottom: rgb(240, 240, 240) solid 0.1rpx;
}

.dateTime,.carType,.basicprice{
  display: flex;
  align-items: center;
  height:90rpx;
  justify-content: space-between;
}
.home_delivery{
  display: flex;
  align-items: center;
  justify-content: baseline;
  height: 90rpx;
}
.van-checkbox{
  margin-right: 10rpx;
}
.money{
  color: red;
  font-size: 20rpx;
}
/* .hide{
  display: none;
}
.show{
  display: block;
} */
/* 基础价格 */
.priceTitle{
  width:26%;
}
.price{
  width: 70%;
  text-align: center;
  color: rgb(243, 105, 55);
  font-weight: 700;
  font-size: 20px;
}
/* 确认按钮 */
.btn{
  width: 100%;
  background-color: #ff7f00;
  color: white;
}
.arrow-r{
  width: 50%;
  height:50%;
}
/* 时间部分代码 */
.chooseDay{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.line{
  width: 60rpx;
  height: 10rpx;
}
.iconfont{
  right: 0;
  display: inline-block;
  text-align: center;
}
/* 日期类代码 */
.mod{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 5rpx 0;
  box-sizing: border-box;
}
/* 底部新手指引等部分 */
.content .other{
  border-radius: 2%;
  position: absolute;
  height: 20%;
  width: 100%;
  background-color: #fff;
  bottom:10rpx;
  border-radius: 5rpx;
  overflow: hidden;
}
.scrollItem{
  padding: 20rpx 30rpx 5rpx;
  white-space: nowrap;
}
.scrollItem .wrapList{
  width:180rpx;
  height: 240rpx;
  display: inline-block;
}
.scrollItem .wrapList image{
  border-radius: 20rpx;
  margin-bottom: 10rpx;
  width:80rpx;
  height: 80rpx;
}
.scrollItem .wrapList .itemName{
  font-size: 20rpx;
  overflow: hidden;
  white-space: nowrap;
}

  /* 车型弹框  */
.car_type{
  padding: 20rpx;
  background-color: rgb(214, 212, 212);
}
.carTypeItem{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  justify-content: space-between;
  background-color: #fff;
}
.carImg{
  width: 60rpx;
  height:100rpx;
  background-color: yellowgreen;
}
.carName{
  color: rgb(41, 146, 111);
}
.carDesc{
  font-size: 20rpx;
  color: #bebaba;
}
.scrollItem{
  margin-bottom: 20rpx;
}
.carTextDesc{
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.avgDayPriceText{
  color: #e8e8e8;
  font-size: 18rpx;
}
.avgDayPrice{
  color: bisque;
}
/* 租赁方式选择 */
.rental{
  background-color: rgb(248, 214, 220);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
}
.rentalDays{
  height: 30rpx;
  display: flex;
  align-items: center;
}
/* 背景白色代码 */
.itemBackColor{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
}
/* 普通日租方式 */
.page-section-spacingItemOne{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  border-bottom: 1rpx solid #e8e8e8;

}
.car_type,.rental,.backDate{
  margin-bottom: 20rpx;
}

.page-section-title{
  margin-bottom: 20rpx;
   text-align: center;
}
.page-section-spacingItem{
  display: flex;
  height: 50rpx;
  margin-top: 20rpx;
  justify-content: space-between;
}
.line{
  width: 60rpx;
  height: 10rpx;
}
/* 归还日期代码 */
.backDate{
  background-color: rgb(245, 206, 212);
  display: flex;
  font-size: 22rpx;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;

}
.backDateItem{
  height: 80rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}