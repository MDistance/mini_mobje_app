<view class="container">
    <view class="container_con">
      <view class="content">
      <!-- 选择车型城市日期 -->
        <view class="car">
           <!-- 选择城市 -->
           <view class="carCity">
              <view class="carCityItem">
                <view class="section">
                    <view class="section__title">取车城市</view>
                    <picker bindchange="bindPickerCity" value="{{index}}" range="{{array}}">
                        <view class="picker">{{array[index]}}
                        <text class="iconfont icon-arrLeft-fill"></text>
                      </view>
                    </picker>
                </view>
                <view class="section">
                      <view class="section__title">取车网点</view>
                      <view class="picker" bindtap="cityChange">{{carList[index]}}
                        <text class="iconfont icon-arrLeft-fill"></text>
                      </view>
                </view>
                <view class="section">
                      <view class="section__title">上门送车</view>
                      <view class="picker">
                        <van-switch checked="{{ checked }}" style="zoom:0.5" bindtap="switch1Change"/>
                      </view>
                </view>
              </view>
            </view>
            <view class="carCity">
              <view class="carCityItem">
                  <view class="section">
                    <view class="section__title">还车城市</view>
                    <picker bindchange="bindBackCity" value="{{index}}" range="{{backArray}}">
                        <view class="picker">{{backArray[index]}}
                        <text class="iconfont icon-arrLeft-fill"></text>
                      </view>
                    </picker>
                  </view>
                  <view class="section">
                        <view class="section__title">还车网点</view>
                        <text class="iconfont icon-arrLeft-fill"></text>
                  </view>
                  <view class="section">
                        <view class="backService">送车服务说明222元</view>
                  </view>
              </view>
            </view>
            <!-- 选择日期 -->
            <view class="dateTime">
              <view class="mod t-sign-time">
                <picker mode="time" value="{{time}}" start="09:00" end="16:30" bindchange="bindTimeChange">
                  <view class="picker">
                     09:01
                  </view>
                </picker>
              </view>
              <view class="mod t-sign-time">
                <image class="line" src="/assets/line.png"></image>
                <picker class="chooseDay" bindchange="bindPickerChange" value="{{index}}" range="{{days}}">
                  <view class="picker" style="color:#2ab6b7">
                    {{days[10]}}
                  </view>
                </picker>      
                <image class="line" src="/assets/line.png"></image>
              </view>
              <view class="mod t-sign-time">
                  <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
                    <view class="picker">
                      2020-10-20 {{date}}
                    </view>
                  </picker>
              </view>
              
            </view>
            <!-- 选择车型 -->
            <view class="carType">
              <text class="key">车型选择：</text>
              <view bindtap="change">
              <!-- <picker bindchange="bindPickerChange" value="{{index}}" range="{{carList}}"> -->
                      <view class="picker">{{carList[index]}}
                      <text class="iconfont icon-arrLeft-fill"></text>
                    </view>
                <!-- </picker> -->
              </view>
            </view>
            <!-- 基础价格 -->
            <view class="basicprice">
              <view class="priceTitle">
                <text class="key">基础价格</text>
                <text class="iconfont icon-wenhao2" bindtap="modalinput"></text>
              </view>
              <text class="price">888元</text>
            </view>
            <!-- 确认按钮 -->
            <view>
              <button class="btn" bindtap="confirm">确认</button>
            </view>
        </view>
      </view>
    <view  class="main">
        <van-tabs active="{{activeCar}}" border='false'>
        <van-tab title="经济型">
          <carTypeCom class="carTypeCom"></carTypeCom>
        </van-tab>
        <van-tab title="舒适型"> <carTypeCom class="carTypeCom"></carTypeCom></van-tab>
        <van-tab title="SUV"> <carTypeCom class="carTypeCom"></carTypeCom></van-tab>
      </van-tabs>
      </view>
    </view>
</view>