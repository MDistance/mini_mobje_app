/* pages/vaddService/vaddService.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: rgb(240, 240, 240);
  overflow: hidden;
  overflow-y: scroll;
}
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.header{
  padding: 20rpx 0;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  border-bottom: 1px solid seashell;
}
.mid{
  width: 100%;
  height: 180rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.mid-mid{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5rpx;
  width:25%;
  color: orange;
  border: 1rpx solid orange;
}
.headerText{
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
}
.mid-bot{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width:20%;
  height: 100%;
}
.icon-jiantou3{
  font-size:22rpx;
}
.semicircle{
  width:50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: rgb(221, 224, 224);
}
.headerLeft{
  margin-left: -25rpx;
}
.headerRight{
  margin-right: -25rpx;
}
.headerText{
  margin-right: 20rpx;
  font-size: 24rpx;
}
.sizeFont{
  font-weight: bold;
  font-size: 40rpx;
  color: red;
}
/* 中间内容 */
.main{
  border: 1px solid seashell;
  box-sizing: border-box;
  width: 100%;
  height: 600rpx;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.contentHeader{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx seashell solid;
}
.van-cell-group ,.van-cell{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.read{
  padding: 30rpx;
  display: flex;
  justify-content: start;
  background-color: #fff;
}
.van-radio-groupRead{
  display: inline-block;
}
.ruleText{
  color: orange;
}
.addService{
  margin-bottom: 20rpx;
}
.footer{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 500rpx;
  padding: 20rpx 0;

  background-color: #fff;
}
