/* pages/invoice-title/invoice-title.wxss */
.container{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  font-size: 22rpx;
}
.header{
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 50rpx 0rpx;
  box-sizing: border-box;
  background-color: #fff;
  color: rgb(0, 0, 0);
  margin-bottom: 10rpx;
}
.footer{
  width: 100%;
  position: fixed;
  bottom:0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 50rpx 0rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.footerText{
  width: 90%;
  padding:20rpx;
  text-align: center;
  background-color: orangered;
  color: #fff;
  border-radius:30rpx;
}
.main{
  width: 100%;
  height: 100%;
  padding:20rpx;
  box-sizing: border-box;
}
.content{
  border-radius:20rpx;
  width: 100%;
  background-color: #fff;
}
.main-header{
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ececec;
}
.main-con{
  border-radius: 2%;
  width: 100%;

  border-radius: 5rpx;
  overflow: hidden;
}

.scrollItem{
  padding: 20rpx 30rpx 5rpx;
  white-space: nowrap;
}
.scrollItem .wrapList{
  width:180rpx;
  height: 240rpx;
  display: inline-block;
}
.scrollItem .wrapList image{
  border-radius: 20rpx;
  margin-bottom: 10rpx;
  width:150rpx;
  height: 150rpx;
}
.scrollItem .wrapList .itemName{
  font-size: 20rpx;
  overflow: hidden;
  white-space: nowrap;
}
.address{
  padding:20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.openHours,.phoneNum{
  padding: 20rpx 0rpx;
  box-sizing: border-box;
}
.addressTo{
  display: flex;
  justify-content: space-between;
}